<?xml version="1.0"?>
<config>
    <modules>
        <NowInStore_CatalogBuilder>
            <version>1.4.0</version>
        </NowInStore_CatalogBuilder>
    </modules>
    <frontend>
        <routers>
            <catalogbuilder>
                <use>standard</use>
                <args>
                    <module>NowInStore_CatalogBuilder</module>
                    <frontName>catalogbuilder</frontName>
                </args>
            </catalogbuilder>
        </routers>
    </frontend>
	<adminhtml>
        <layout>
            <updates>
                <module>
                    <file>nowinstore.xml</file>
                </module>
            </updates>
        </layout>
	</adminhtml>
</config>
